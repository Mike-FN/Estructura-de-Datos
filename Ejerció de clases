import random

# --- Datos iniciales ---
meses = ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", 
         "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"]
deptos = ["Ropa", "Deportes", "JugueterÃ­a"]

# Generar tabla inicial con ventas aleatorias
ventas = [[round(random.uniform(1000, 5000), 2) for _ in range(3)] for _ in range(12)]

def mostrar_tabla():
    print(f"\n{'MES':<12} | {'ROPA':>10} | {'DEPORTES':>10} | {'JUGUETERÃA':>10}")
    print("-" * 55)
    for i in range(12):
        print(f"{meses[i]:<12} | {ventas[i][0]:>10.2f} | {ventas[i][1]:>10.2f} | {ventas[i][2]:>10.2f}")

def obtener_coordenadas():
    """Pide al usuario mes y departamento y devuelve sus Ã­ndices."""
    m_input = input("ğŸ“… Ingresa el nombre del mes: ").strip().capitalize()
    d_input = input("ğŸ·ï¸  Ingresa el departamento (Ropa/Deportes/JugueterÃ­a): ").strip().capitalize()
    
    if m_input in meses and d_input in deptos:
        return meses.index(m_input), deptos.index(d_input), m_input, d_input
    else:
        return None, None, None, None

# --- Bucle Principal del MenÃº ---
while True:
    print("\n" + " SYSTEMA DE GESTIÃ“N DE VENTAS ".center(50, "="))
    print("1. Ver tabla completa")
    print("2. Modificar/Insertar un monto")
    print("3. Buscar una venta especÃ­fica")
    print("4. Eliminar una venta (poner en 0)")
    print("5. Salir")
    
    opcion = input("\nSelecciona una opciÃ³n (1-5): ")

    if opcion == "1":
        mostrar_tabla()

    elif opcion == "2":
        fila, col, m, d = obtener_coordenadas()
        if fila is not None:
            nuevo_monto = float(input(f"ğŸ’° Ingresa el nuevo monto para {m} en {d}: "))
            ventas[fila][col] = nuevo_monto
            print(f"âœ… Â¡Actualizado! {m}-{d} ahora tiene ${nuevo_monto:,.2f}")
        else:
            print("âŒ Error: Mes o departamento no vÃ¡lido.")

    elif opcion == "3":
        fila, col, m, d = obtener_coordenadas()
        if fila is not None:
            valor = ventas[fila][col]
            print(f"ğŸ” Resultado: La venta de {d} en {m} es de ${valor:,.2f}")
        else:
            print("âŒ Error: Datos no encontrados.")

    elif opcion == "4":
        fila, col, m, d = obtener_coordenadas()
        if fila is not None:
            ventas[fila][col] = 0.0
            print(f"ğŸ—‘ï¸ Venta de {m} en {d} ha sido borrada (0.00).")
        else:
            print("âŒ Error: No se pudo realizar la operaciÃ³n.")

    elif opcion == "5":
        print("ğŸ‘‹ Saliendo del sistema... Â¡Buen dÃ­a!")
        break
    
    else:
        print("âš  OpciÃ³n no vÃ¡lida, intenta de nuevo.")
